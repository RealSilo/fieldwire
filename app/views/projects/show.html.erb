<h2><%= @project.name %></h2>

<%= link_to 'New Floorplan', new_project_floorplan_path(@project), class: "btn btn-primary" %>


<% @floorplans.each_slice(3) do |floorplans_for_row| %>
  <div class="row" style="padding-top:30px;">
    <% floorplans_for_row.each do |floorplan| %>
      <div class="col-md-4" id="image-insert">
        <% if pdf_format?(floorplan) %>
          <%= render 'floorplans/pdf', floorplan: floorplan %>
        <% else %>
          <%= render 'floorplans/image', floorplan: floorplan %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
