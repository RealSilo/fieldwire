
  <%= form_for([@project, floorplan]) do |f| %>
    <%= render 'layouts/error_messages', object: f.object %>

    <div class="row">
      <div class="col-md-3">
        <div class="form-group">
          <%= f.label :display_name %>
          <%= f.text_field :display_name, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div style="padding-bottom:10px;">Please choose a file the uploading will start automatically.</div>
        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :image, multiple: true, name: "floorplan[image]" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="form-group" id="progressbar">
        </div>
      </div>
    </div>
  <% end %>
</div>