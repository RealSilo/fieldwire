
  <%= form_for([@project, floorplan]) do |f| %>
    <% if floorplan.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(floorplan.errors.count, "error") %> prohibited this floorplan from being saved:</h2>

        <ul>
        <% floorplan.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-3">
        <div class="form-group">
          <%= f.label :display_name %>
          <%= f.text_field :display_name, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3">
        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :image, multiple: true, name: "floorplan[image]" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.submit 'Create floorplan' ,class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>